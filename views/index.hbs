<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <title>Mock SendGrid E-mails</title>
  <link href="/tailwind.min.css" rel="stylesheet">
</head>

<body>
  <h2 class="text-lg leading-normal font-semibold">Mock SendGrid mail</h2>
  <table class="table-auto w-full mt-3">
    <thead>
      <tr>
        <th>Data/Hora</th>
        <th>Emissor</th>
        <th>Assunto</th>
        <th>Para</th>
        <th style="width: 7rem;">Visutalizar</th>
      </tr>
    </thead>
    <tbody>
      {{#each emails}}
      <tr>
        <td class="border">{{this.moment}}</td>
        <td class="border">{{this.from.email}} | {{this.from.name}}</td>
        <td class="border">{{this.subject}}</td>
        <td class="border">
          {{#each personalizations}}
          {{#each to}}
          <span>{{this.email}} | {{this.name}}</span><br />
          {{/each}}
          {{/each}}
        </td>
        <td class="border text-center">
          <a href="{{this.id}}/preview" class="bg-blue-500 text-white py-1 px-4 rounded"
            type="button">
            Visualizar
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</body>

</html>